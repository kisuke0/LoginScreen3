<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity"
    android:background="@drawable/sky">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">
        
        <ImageView
            android:id="@+id/image2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/bulb"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"></ImageView>
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="USER NAME"
            android:textColor="@color/yellow"
            android:textStyle="bold"
            android:layout_below="@id/image2"
            android:layout_marginTop="40dp"></TextView>
        <EditText
            android:id="@+id/edit1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:hint="anneb@gmail.com"
            android:textColorHint="#FFF"
            android:background="@android:color/transparent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="5dp"></EditText>
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PASSWORD"
            android:textColor="@color/yellow"
            android:textStyle="bold"
            android:layout_below="@id/edit1"
            android:layout_marginTop="10dp"></TextView>
        <EditText
            android:id="@+id/edit2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text2"
            android:hint="*********"
            android:textColorHint="#FFF"
            android:background="@android:color/transparent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="5dp"
            android:inputType="textPassword"></EditText>
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:layout_below="@id/edit2"
            android:layout_alignRight="@id/edit2"></TextView>
        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:background="@drawable/btn2"
            android:layout_below="@id/text3"
            android:layout_marginTop="10dp"></Button>
        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/btn1"
            android:layout_marginTop="5dp"
            android:background="#000"></View>
        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textColor="#FFF"
            android:layout_below="@id/view1"
            android:layout_centerHorizontal="true"
            android:textSize="15sp"></TextView>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text4"
            android:background="@drawable/btn1"
            android:text="FACEBOOK"
            android:layout_marginTop="10dp"
            android:textColor="@color/blue"
            android:drawableLeft="@drawable/facebook"
            android:drawablePadding="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text4"
            android:background="@drawable/btn1"
            android:text="GMAIL"
            android:layout_marginTop="10dp"
            android:textColor="@color/red"
            android:layout_alignRight="@id/btn1"
            android:drawableLeft="@drawable/gmail"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:drawablePadding="25dp"></Button>
        
        
    </RelativeLayout>

</RelativeLayout>